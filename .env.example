# AdvanceGPT - Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================
# APPLICATION SETTINGS
# =================================
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_URL=postgresql://user:password@localhost:5432/advancegpt
REDIS_URL=redis://localhost:6379

# =================================
# AI MODEL PROVIDERS
# =================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Google Gemini
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-pro

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Hugging Face (optional)
HUGGINGFACE_API_KEY=your_huggingface_key_here

# =================================
# GOOGLE OAUTH & SERVICES
# =================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Google Drive & Gmail Scopes
GOOGLE_SCOPES=https://www.googleapis.com/auth/drive,https://www.googleapis.com/auth/gmail.modify

# =================================
# SOCIAL MEDIA INTEGRATIONS
# =================================

# Instagram
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
# Or use Instagram Graph API (recommended)
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_id

# YouTube
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CHANNEL_ID=your_channel_id

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# =================================
# VECTOR DATABASE (Memory System)
# =================================
CHROMA_DB_PATH=./data/chromadb
CHROMA_DB_HOST=localhost
CHROMA_DB_PORT=8001

# =================================
# AUTOMATION & WORKFLOWS
# =================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# =================================
# AUTHENTICATION & SECURITY
# =================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_key_change_this

# Encryption key for storing credentials
ENCRYPTION_KEY=your_32_char_encryption_key_here

# =================================
# FILE STORAGE
# =================================
# Local storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_BUCKET_NAME=advancegpt-storage
AWS_REGION=us-east-1

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =================================
# LOGGING & MONITORING
# =================================
LOG_LEVEL=info
LOG_FILE=./logs/advancegpt.log

# Sentry (optional - for error tracking)
SENTRY_DSN=your_sentry_dsn

# =================================
# EMAIL NOTIFICATIONS
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=noreply@advancegpt.com

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# MISC
# =================================
TIMEZONE=America/New_York
DEFAULT_LANGUAGE=es

# =================================
# DOCKER SPECIFIC (if using Docker)
# =================================
DOCKER_POSTGRES_USER=advancegpt
DOCKER_POSTGRES_PASSWORD=secure_password_here
DOCKER_POSTGRES_DB=advancegpt
